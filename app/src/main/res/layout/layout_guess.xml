<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:id="@+id/guess_view_current_word"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="word"/>
    <TextView
        android:id="@+id/guess_view_current_states"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/guess_view_current_word"
        android:text="states"/>
    <Button
        android:id="@+id/guess_view_guess_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/guess_view_current_states"
        android:text="guess"
        android:onClick="guessWord"/>
    <Button
        android:id="@+id/guess_view_get_result_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/guess_view_guess_button"
        android:text="@string/guess_view_check_result_button"
        android:onClick="checkResult"/>
    <Button
        android:id="@+id/guess_view_skip_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/guess_view_get_result_button"
        android:text="@string/guess_view_skip_button"
        android:onClick="skipWord"/>

</RelativeLayout>