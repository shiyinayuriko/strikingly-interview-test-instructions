<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:id="@+id/result_view_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="status"/>
    <Button
        android:id="@+id/result_view_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/result_view_status"
        android:text="@string/result_view_submit_button"/>
    <Button
        android:id="@+id/result_view_resume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/result_view_submit"
        android:text="@string/result_view_resume_button"/>
    <Button
        android:id="@+id/result_view_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/result_view_resume"
        android:text="@string/result_view_exit_button"/>
</RelativeLayout>